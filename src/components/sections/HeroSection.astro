---
interface Props {
  title: string;
  description: string;
  image?: string;
  buttonText?: string;
  buttonLink?: string;
  bullets?: Array<{
    title: string;
    description?: string;
  }>;
}

const { title, description, image, buttonText, buttonLink, bullets } =
  Astro.props;
---

<section class="py-16 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="flex flex-col gap-6">
        <h2 class="text-4xl font-bold">{title}</h2>
        <p class="text-lg text-gray-600">{description}</p>

        {
          bullets && bullets.length > 0 && (
            <ul class="flex flex-col gap-4 mt-4">
              {bullets.map((bullet) => (
                <li class="flex items-start gap-3">
                  <svg
                    class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <div>
                    <span class="font-medium">{bullet.title}</span>
                    {bullet.description && (
                      <p class="text-gray-600 text-sm mt-1">
                        {bullet.description}
                      </p>
                    )}
                  </div>
                </li>
              ))}
            </ul>
          )
        }

        {
          buttonText && buttonLink && (
            <a
              href={buttonLink}
              class="inline-flex items-center justify-center bg-[#A9E000] text-black font-medium py-3 px-6 rounded-md hover:bg-[#98cc00] transition-colors w-fit"
            >
              {buttonText}
            </a>
          )
        }
      </div>

      {image && <img src={image} alt={title} />}
    </div>
  </div>
</section>
